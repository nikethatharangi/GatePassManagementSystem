@page
@model GatePassManagementSystem.Pages.LoginModel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="LoginCS/fonts/icomoon/style.css">
    <link rel="stylesheet" href="LoginCS/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="LoginCS/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="LoginCS/css/style.css">
    <link rel="shortcut icon" href="../assets/images/logo.png" />

    <title>Gate Pass Management System</title>
</head>
<body>


    <div class="d-md-flex half">
        <div class="bg" style="background-image: url('LoginCS/images/Background.jpg');"></div>
        <div class="contents">

            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-12">
                        <div class="form-block mx-auto">
                            <div class="text-center mb-5">
                                <h3><strong>Login to Gate Pass System</strong></h3>
                                <!-- <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p> -->
                            </div>
                            <form method="post">
                                <div>
                                    <label class="text-danger">@TempData["lblerror"]</label>
                                </div>
                                <div class="form-group first">
                                    <label for="username" asp-for="Users.UserName">Username</label>
                                    <input type="text" id="txtuser" asp-for="Users.UserName" class="form-control" required/>
                                      @*<span asp-validation-for="Users.UserName" class="text-danger"></span>*@ 
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password" asp-for="Users.Password">Password</label>
                                    <input type="password" id=" txtpass" asp-for="Users.Password" class="form-control" required/>
                                      @*<span asp-validation-for="Users.Password" class="text-danger"></span>*@ 
                                </div>

                                <!--   <div class="d-sm-flex mb-5 align-items-center">
                                    <label class="control control--checkbox mb-3 mb-sm-0" asp-for="RememberMe">
                                        <span class="caption">Remember Me</span>
                                        <input type="checkbox" asp-for="Model.RememberMe" checked="checked"/>
                                        <div class="control__indicator"></div>
                                    </label>
                                    <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
                                </div>-->
                                <div>
                                    <button id="Button1" type="submit" class="btn btn-block btn-primary">Login</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="LoginCS/js/jquery-3.3.1.min.js"></script>
    <script src="LoginCS/js/popper.min.js"></script>
    <script src="LoginCS/js/bootstrap.min.js"></script>
    <script src="LoginCS/js/main.js"></script>
</body>
</html>
