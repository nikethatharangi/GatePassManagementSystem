                                                                                            @{ bool isShortLeaveChecked = item.ChkShrt == true; }
                                                                                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios3" @(isShortLeaveChecked ? "checked" : "") disabled>
                                                                                            Short Leave<i class="input-helper"></i>
                                                                                        </label>
                                                                                    </div>
                                                                                </div>

                                                                                <div class="col-sm-3">
                                                                                    <div class="form-check">
                                                                                        <label class="form-check-label">
                                                                                            @{ bool isMadupitiyaChecked = item.ChkMadu == true; }
                                                                                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios4" @(isMadupitiyaChecked ? "checked" : "") disabled>
