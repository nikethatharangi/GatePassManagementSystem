                                                                                            Other<i class="input-helper"></i>
                                                                                        </label>
                                                                                    </div>
                                                                                </div>

                                                                                <div class="col-sm-3">
                                                                                    <div class="form-check">
                                                                                        <label class="form-check-label">
                                                                                            @{ bool isSinthawattaChecked = itemw.ChkSinthawatta == true; }
