                                                            @{
                                                                string Fullname = Model.Db.Workers.Where(gp => gp.Id == itemw.WrkId).Select(gp => gp.Name).FirstOrDefault();
                                                                TempData["Fullname"] = Fullname;

                                                                string deptname = Model.Db.Department.Where(gp => gp.Id == itemw.DepId).Select(gp => gp.DeptName).FirstOrDefault();
