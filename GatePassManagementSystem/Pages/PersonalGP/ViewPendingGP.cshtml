                                                                            <textarea class="form-control" id="exampleTextarea1" rows="4" readonly="readonly">@Html.DisplayFor(m => itemw.Reason)</textarea>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            @{
                                                                string DeptHead = Model.Db.Department.Where(gp => gp.Id == itemw.WrkId).Select(gp => gp.Hod).FirstOrDefault();
                                                                TempData["DeptHead"] = DeptHead;

                                                                string DeptGm = Model.Db.Department.Where(gp => gp.Id == itemw.WrkId).Select(gp => gp.Gm).FirstOrDefault();
                                                                TempData["DeptGm"] = DeptGm;
                                                            }
                                                            <div class="card">
                                                                <div class="card-body">
                                                                    <form class="forms-sample">
                                                                        <div class="form-group" style="margin-bottom:0px!important">
                                                                            <label for="exampleInputUsername1">HOD acknowledgement</label>
                                                                            <input type="text" class="form-control" asp-for="@TempData["DeptHead"]" readonly="readonly">
                                                                        </div>
                                                                        <div class="form-check">
                                                                            @if (itemw.AShod == "A")
                                                                            {
                                                                                <label class="badge badge-success">Acknowledged</label>
                                                                            }
                                                                            else if (itemw.AShod == "R")
                                                                            {
                                                                                <label class="badge badge-danger">Rejected</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                <label class="badge badge-warning">Not acknowledged</label>
                                                                            }
                                                                        </div>

                                                                        <div class="form-group" style="margin-bottom:0px!important; margin-top:20px!important">
                                                                            <label for="exampleInputUsername1">Management Approval</label>
                                                                            <input type="text" class="form-control" asp-for="@TempData["DeptGm"]" readonly="readonly">
                                                                        </div>
                                                                        <div class="form-check">
                                                                            @if (itemw.ASdgm == "A")
                                                                            {
                                                                                <label class="badge badge-success mt-2">Approved</label>
                                                                            }
                                                                            else if (itemw.ASdgm == "R")
                                                                            {
                                                                                <label class="badge badge-danger mt-2">Rejected</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                <label class="badge badge-warning mt-2">Not Approved</label>
                                                                            }
                                                                        </div>

                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </table>

                        </div>


                    }
                    else
                    {
                        <p>No Gatepasses available to approve</p>
                    }

                </div>

            </div>
        </div>

