                                                                                        </label>
                                                                                    </div>
                                                                                </div>

                                                                                <div class="col-sm-3">
                                                                                    <div class="form-check">
                                                                                        <label class="form-check-label">
                                                                                            @{ bool isSinthawattaChecked = item.ChkSinthawatta == true; }
                                                                                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios6" @(isSinthawattaChecked ? "checked" : "") disabled>
                                                                                            Sinthawatta<i class="input-helper"></i>
                                                                                        </label>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>

                                                                        <div class="form-group">
                                                                            <textarea class="form-control" id="exampleTextarea1" rows="4" readonly="readonly">@Html.DisplayFor(m => item.Description)</textarea>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6">
                                                            @{
                                                                string DeptHead = Model.Db.Department.Where(gp => gp.Id == item.UserId).Select(gp => gp.Hod).FirstOrDefault();
                                                                TempData["DeptHead"] = DeptHead;

                                                                string DeptGm = Model.Db.Department.Where(gp => gp.Id == item.UserId).Select(gp => gp.Gm).FirstOrDefault();
                                                                TempData["DeptGm"] = DeptGm;
                                                            }
                                                            <div class="card">
                                                                <div class="card-body">
                                                                    <form class="forms-sample">
                                                                        <div class="form-group" style="margin-bottom:0px!important">
                                                                            <label for="exampleInputUsername1">HOD acknowledgement</label>
                                                                            <input type="text" class="form-control" asp-for="@TempData["DeptHead"]" readonly="readonly">
                                                                        </div>
                                                                        <div class="form-check">
                                                                            @if (item.AShod == "A" )
                                                                            {
                                                                                <label class="badge badge-success">Acknowledged</label>
                                                                            }
                                                                            else if (item.AShod == "R")
                                                                            {
                                                                                <label class="badge badge-danger">Rejected</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                <label class="badge badge-warning">Not acknowledged</label>
                                                                            }
                                                                        </div>

                                                                        <div class="form-group" style="margin-bottom:0px!important; margin-top:20px!important">
                                                                            <label for="exampleInputUsername1">Management Approval</label>
                                                                            <input type="text" class="form-control" asp-for="@TempData["DeptGm"]" readonly="readonly">
                                                                        </div>
                                                                        <div class="form-check">
                                                                            @if (item.ASdgm == "A")
                                                                            {
                                                                                <label class="badge badge-success mt-2">Approved</label>
                                                                            }
                                                                            else if (item.ASdgm == "R")
                                                                            {
                                                                                <label class="badge badge-danger mt-2">Rejected</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                <label class="badge badge-warning mt-2">Not Approved</label>
                                                                            }
                                                                        </div>

                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    @*<button type="button" class="btn btn-primary">Save changes</button>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }

                            </table>

                        </div>


                    }
                    else
                    {
                        <p>No Gatepasses available to approve</p>
                    }

                </div>

            </div>
        </div>

