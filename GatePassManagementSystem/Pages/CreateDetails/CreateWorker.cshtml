@page
@model GatePassManagementSystem.Pages.CreateDetails.CreateWorkerModel
@{
}

<div class="content-wrapper">

    <div class="page-header">
        <h3 class="page-title">Personal Gate Pass</h3>


        @*<nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Forms</a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Personal Gate Pass </li>
                </ol>
            </nav>*@
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create New Worker</h4>
                    <form class="form-sample" method="post">
                        <p class="card-description">Personal info</p>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Full Name</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Workers.Name" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">NIC</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Workers.NIC" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">EPFNo</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Workers.EPFNo" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Designation</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Workers.Designation" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">Department</label>
                                    <div class="col-sm-9">
                                        <select asp-for="Workers.DeptId" asp-items="@(new SelectList(Model.deplist, "Id", "DeptName"))" class="form-control">
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group row">
                                    <label class="col-sm-3 col-form-label">RFID No.</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" asp-for="Workers.RFIDNumber" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary mr-2"> Submit </button>
                        <button class="btn btn-light" asp-page="/Index">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
